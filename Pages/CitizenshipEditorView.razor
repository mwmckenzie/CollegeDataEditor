@page "/CitizenshipEditorView"
@using CollegeDataEditor.Services
@using CollegeDataEditor.Enums
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "editor")]

@inject DbService _dbService;
@inject ViewModelService _viewModelService;


<IndexedValueEditTable listName="Citizenship"
                       ViewModel="_viewModelService.CitizenshipDbVM"/>


@code {
    
    protected override void OnInitialized()
    {
        base.OnInitialized();

        var vm = _viewModelService.CitizenshipDbVM;
        vm.dbService = _dbService;
        vm.db = _dbService.CitizenshipsDb;
        vm.valueType = IndexedValueType.Citizenship;
        
    }
}