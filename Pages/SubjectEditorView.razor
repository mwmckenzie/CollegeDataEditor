@page "/SubjectEditorView"
@using CollegeDataEditor.Services
@using CollegeDataEditor.Enums
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "editor")]

@inject DbService _dbService;
@inject ViewModelService _viewModelService;


<IndexedValueEditTable listName="Subject"
                       ViewModel="_viewModelService.SubjectDbVM"/>


@code {
    
    protected override void OnInitialized()
    {
        base.OnInitialized();

        var vm = _viewModelService.SubjectDbVM;
        vm.dbService = _dbService;
        vm.db = _dbService.SubjectsDb;
        vm.valueType = IndexedValueType.Subject;
        
    }

}