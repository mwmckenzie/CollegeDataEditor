@page "/OrgTypeEditorView"
@using CollegeDataEditor.Services
@using CollegeDataEditor.Enums
@using Microsoft.AspNetCore.Authorization

@attribute [Authorize(Roles = "editor")]

@inject DbService _dbService;
@inject ViewModelService _viewModelService;


<IndexedValueEditTable listName="Organization Type"
                       ViewModel="_viewModelService.OrgTypeDbVM"/>


@code {
    
    protected override void OnInitialized()
    {
        base.OnInitialized();

        var vm = _viewModelService.OrgTypeDbVM;
        vm.dbService = _dbService;
        vm.db = _dbService.OrgTypesDb;
        vm.valueType = IndexedValueType.OrgType;
        
    }

}